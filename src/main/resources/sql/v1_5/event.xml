<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hongzhi.zswh.app_1_5.dao.EventDao">

    <insert id="createEvent"  useGeneratedKeys="true"  keyProperty="event_id" >
    insert into event (
          event_name
         ,club_id
         ,start_time
         ,end_time
         ,register_start_time
         ,register_end_time
         ,organizer_id
         ,event_address
         ,min_people
         ,max_people
         ,fee
         ,image
         ,event_status
         ,view_guests
         ,form_item
         ,event_detail
         ,event_notice
         ,group_id
    ) values (
          #{event_name}
         ,#{club_id}
         ,#{sql_start_time}
         ,#{sql_end_time}
         ,#{sql_register_start_time}
         ,#{sql_register_end_time}
         ,#{organizer_id}
         ,#{event_address}
         ,#{min_people}
         ,#{max_people}
         ,#{fee}
         ,#{image}
         ,#{event_status}
         ,#{view_guests}
         ,#{form_item}
         ,#{event_detail}
         ,#{event_notice}
         ,#{group_id}
    )

    </insert>

    <insert id="saveEventItems">
    insert into event_form (
         event_id
        ,item_code
    ) values
    <foreach collection="items" item="item" separator="," >
        (
          #{eventID}
         ,#{item}
        )
    </foreach>
    </insert>

    <insert id="EventUserProfile">
        insert into event_user_profile (
        event_id
        ,user_id
        ,item_code
        ) values
        <foreach collection="items" item="item" separator="," >
            (
            #{event_id}
            #{user_id}
            ,#{item}
            )
        </foreach>
    </insert>

    <select id="selectClubAmin" resultType="Integer">
        select
        a.user_id
        from
        user_detail a
        where
        a.club_id = #{club_id}
        and
        a.user_level = 0
    </select>


    <insert id="organizerJoin" >
        insert into event_registration (
        event_id
        ,user_id
        ,create_time
        ,my_status
        ) values (
        #{event_id}
        ,#{organizer_id}
        ,now()
        ,1
        )
    </insert>

    <insert id="saveEventGroup">
        insert into event_group (
            event_id
            ,user_id
            ,group_id
            ,group_level
            ,status
            ) values (
            #{event_id}
            ,#{user_id}
            ,#{group_id}
            ,0
            ,1
            )

    </insert>

    <insert id="saveEventGroupUser">
          insert into event_group (
            event_id
            ,user_id
            ,group_id
            ,group_level
            ,status
            ) values (
            #{event_id}
            ,#{user_id}
            ,#{group_id}
            ,99
            ,1
            )

    </insert>
    <select id="eventGroupMember" resultType="map">
          SELECT
                coalesce(a.user_id,'')user_id
                ,coalesce(b.nickname,concat(substr(b.phone,1,3),'****',substr(b.phone,8)) ) as name
                ,coalesce(b.profile_picture,'') as  profile_image
                ,coalesce(a.group_level,'') as group_level
                FROM event_group a
                LEFT JOIN user_info b
                on a.user_id = b.user_id
                where a.event_id = #{event_id}
                and a.group_id = #{group_id}
                and a.status = 1
                and b.is_delete  = 0

    </select>

    <update id="deleteGroupMember">
          update event_group
          set  status = 0
          where event_id = #{event_id}
          and group_id = #{group_id}
          and user_id = #{user_id}
    </update>
</mapper>